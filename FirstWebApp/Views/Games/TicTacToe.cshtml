@model TicTacToeModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
	.GameLobbyTable{
		width: 100%;
	}
</style>

<table class="GameLobbyTable">
    <tr>
        <td>
            X player: @Model.PlayerXName
        </td>
        <td>
            O player: @Model.PlayerOName
        </td>
    </tr>
    <tr>
        <td>
            Turn: Player (@Model.CurrentTurnSimbol) | 
        </td>
        <td>
            Turn count: @Model.turnCounter
        </td>
    </tr>
    <tr>
        <td colspan="2">
            @if (Model.IsCurrentPlayerTurn)
            {
                <h3>
                    Чел, ходи ^_^
                </h3>
            }else
            {
                <h3>
                    Жди пока ходит другой чел 0_0
                </h3>
            }
        </td>
    </tr>
    <tr>
        <td>
            <div>
                  @await Html.PartialAsync("../Partial/FieldView", new FieldViewDataModel(Model, !Model.IsCurrentPlayerTurn))
            </div>
        </td>
    </tr>
    <tr>
        <td>
            <form method="post">
                <input type="hidden" name="field" value="@Model.EncodedField" />
				<button asp-controller="Home" asp-action="GoToGame">Зайти на хату</button>
            </form>
        </td>
    </tr>
</table>